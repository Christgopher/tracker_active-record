<h1>Employees in <%= @division.name %></h1>
<form action="/division/<%= @division.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename Division</label>
  <input id="name" name="name" type="text">
  <button type="submit">Change</button>
</form>
<br>
<hr>
<h3> Employees: </h3>
<form action="/employees" method="post">
    <input id="division_id" name="division_id" type="hidden" value="<%= @division.id() %>">

  <label for="name">Name</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add</button>
</form>

<ul>
  <% @division.employees().each() do |employee| %>
    <li><a href = "/employee/<%= employee.id() %>"><%= employee.name() %></li>
  <% end %>
</ul>


<br>

<hr>


<form action="/division/<%= @division.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Division</button>
</form>
<br>
