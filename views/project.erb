<h1><%= @project.name() %></h1>

<% @project.employees().each() do |employee| %>
  <li><a href = "/employee/<%= employee.id() %>"><%= employee.name() %></a></li>
<% end %>
<br>
<form action="/project/<%= @project.id() %>" method="post">
  <label for="employee_id">Select an Employee</label>
  <select id='employee_id' name='employee_id' type='text'>
    <% @employees.each() do |employee| %>
      <option value="<%= employee.id()%>"> <%= employee.name() %> </option>
    <% end %>
  </select>


  <button type="submit">Add employee</button>
</form>

<form action="/project/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="employee_id">Select an Employee</label>
  <select id='employee_id' name='employee_id' type='text'>
    <% @project.employees.each() do |employee| %>
      <option value="<%= employee.id()%>"> <%= employee.name() %> </option>
    <% end %>
  </select>


  <button type="submit">Remove employee</button>
</form>

<br>

<form action="/project/<%= @project.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Project</button>
</form>

